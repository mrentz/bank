<h1>Add user</h1>

<% form_for(@user) do |f| %>
<%= f.error_messages %>

<div class="field">
  <%= f.label "First Name:" %>
<%= f.text_field :first_name %></p>
</div>

<div class="field">
  <%= f.label "Last Name:" %>
<%= f.text_field :last_name %></p>
</div>

<div class="field">
  <%= f.label "Email:" %>
<%= f.text_field :email %></p>
</div>

<div class="actions">
  <%= f.submit "Create" %>
</div>

<% end %>
  <%= link_to 'Back', {:action => 'list'} %>
