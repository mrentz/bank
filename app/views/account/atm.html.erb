<h1><%= "Enter Amount to #{params[:type]} For #{AccountType.find(:first, :conditions => {:id => @account.type_id}).name} Account: #{@account.id}" %></h1>

<h2><%= "Current Balance: #{@account.balance}" %> 
  
  <html>
    <head>
      <title>Keypad Test Code</title>
      
      <script> 
	function place_value(display_value) {
	document.calc.balance.value +=(display_value);
	}
      </script>
      
    </head>
    <body>
      <p>
	
	<div class = atm > 
	  <form action = "/account/update_atm/<%= @account.id %>" value = '' name="calc" method= "post"> 
	    <input name="authenticity_token" type="hidden" value= <%= "#{form_authenticity_token}" %> >
	    <input name = "type" type="hidden" value = <%= params[:type] %>>
	    <table border="1">
	      
	      <table>
		<tr>
		  <td colspan=3 width=75%>
		    <input name="balance" type="text" id="account_balance" ></td>
		  <td>
		    <input type="button" onClick="document.calc.balance.value =('')" 
			   value="Clear" </td>
			   </tr>
		<tr>
		  <td><input type="button" onClick="place_value('1')" value="1" name="1" title="1" ></td>
		  <td><input type="button" onClick="place_value('2')" value="2" name="2" title="2" ></td>
		  <td><input type="button" onClick="place_value('3')" value="3" name="3" title="3" ></td>
		  
		</tr>
		<tr>
		  <td><input type="button" onClick="place_value('4')" value="4" name="4" title="4" ></td>
		  <td><input type="button" onClick="place_value('5')" value="5" name="5" title="5" ></td>
		  <td><input type="button" onClick="place_value('6')" value="6" name="6" title="6" ></td>
		</tr>
		<tr>
		  <td><input type="button" onClick="place_value('7')" value="7" name="7" title="7" ></td>
		  <td><input type="button" onClick="place_value('8')" value="8" name="8" title="8" ></td>
		  <td><input type="button" onClick="place_value('9')" value="9" name="9" title="9" ></td>
		  <td>
		</tr>
		<tr>
		  <td><input type="button" onClick="place_value('.')" value="." name="." title="." ></td>
		  <td colspan = 2>
		    <input type="button" onClick="place_value('0')" value="0" name="0" title="0" ></td>
		  <td><input type="submit" value= <%= "#{params[:type]}" %>></td>
		</tr>
		
	      </table>
	</div>
	<div class="actions">
	  <a href="/account/list">Back</a>
	  
	</div>
	</form>
