<% if @accounts.blank? %>
<p>There are not any accounts currently in the system.</p>
<% else %>
<p>These are the current accounts in our system</p>
<ul id="accounts">
<% @accounts.each do |c| %>
<li>
  <%= link_to "Acc. No: #{c.id}", {:action => 'show', :id => c.id} -%>
 &nbsp &nbsp
<%= link_to "Delete", {:action => "delete", :id => c.id},
    :confirm => "Are you sure you want to delete this item?" %>
</li>
<% end %>
</ul>
<% end %>
<p>  <%= link_to "Back to Users List", {:controller => "users", :action => 'list' }%>  
<p>  <%= link_to "View List of account types", {:controller => "account_type", :action => 'list' }%>  
</p>
